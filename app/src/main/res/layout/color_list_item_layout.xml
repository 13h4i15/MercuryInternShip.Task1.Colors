<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/colors_list_item_body"
    android:theme="@style/color_list_layout_style">
    <TextView
        android:id="@+id/colors_list_item_text"
        style="@style/color_list_layout_TextView_style"/>
    <View
        android:layout_weight="100"
        style="@style/color_list_layout_TextView_style" />
    <ImageView
        android:id="@+id/colors_list_item_circle"
        android:layout_weight="1"
        style="@style/color_list_layout_circle_style"/>
</LinearLayout>