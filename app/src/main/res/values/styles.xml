<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/persian_blue</item>
        <item name="colorPrimaryDark">@color/navy_persian_blue</item>
        <item name="colorAccent">@color/persian_blue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ColorList">
        <item name="android:paddingStart">@dimen/color_list_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/color_list_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/color_list_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/color_list_vertical_padding</item>
        <item name="android:background">@drawable/color_list_item_background_states</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColor">@color/list_item_text_states</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ColorListTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="ColorListView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ColorListCircle">
        <item name="android:layout_height">@dimen/color_list_circle_size</item>
        <item name="android:layout_width">@dimen/color_list_circle_size</item>
        <item name="android:background">@drawable/color_list_circle_item_shape</item>
    </style>

    <style name="MainActivityToolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="MainActivityFab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:tint">@android:color/white</item>
    </style>

</resources>
